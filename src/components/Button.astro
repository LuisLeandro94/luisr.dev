---
interface Props {
    text: string;
    type: string;
    href: string;
    action?: string;
}

const { text, type, href, action } = Astro.props;
---

<a href={href} download={action == "download" ? "LuisRibeiroCV" : false} class={type == "primary" ? "primary" : "secondary"} rel="noopener" target="_blank">
    {text}
</a>

<style>
    .primary {
        display: inline-block;
        border-radius: 40px;
        position: relative;
        padding: 16px 30px;
        background: white;
        color: black;
        cursor: pointer;
        font-weight: 500;
        margin: 0px 10px;
        text-decoration: none;
		transition: background-color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
    }
    .secondary {
        display: inline-block;
        border-radius: 40px;
        border: 2px solid white;
        position: relative;
        padding: 16px 30px;
        color: white;
        cursor: pointer;
        font-weight: 500;
        margin: 0px 10px;
        text-decoration: none;
		transition: background-color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
    }
    a:is(:hover, :focus-within) {
		background-color: rgb(var(--accent-light));
        border-color: rgb(var(--accent-light));
	}

    @media only screen and (max-width: 768px) {
        .primary, .secondary {
            padding: 8px 15px;
        }
    }
</style>