---
interface Props {
    href: string;
    icon: string;
}
import { Icon } from 'astro-icon/components'

const { href, icon } = Astro.props;
---

<li class="link-item">
    <a href={href} rel="noopener noreferer" target="_blank">
        <Icon name={icon} />
    </a>
</li>

<style>
    .link-item a {
        color: white;
        font-size: 24px;
		transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
    }
    .link-item:is(:hover, :focus-within) a {
		color: rgb(var(--accent-light));
	}
</style>